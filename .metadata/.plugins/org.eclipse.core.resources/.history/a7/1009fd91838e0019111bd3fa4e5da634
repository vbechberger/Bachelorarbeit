package genetic;

public abstract class CrossoverOneCutPoint extends CrossoverCutPoints {
	protected int cutPoint = -1;

	public CrossoverOneCutPoint(Chromosome firstParent, Chromosome secondParent, int cutPoint) {
		super(firstParent, secondParent);
		this.cutPoint = cutPoint;
		// TODO Auto-generated constructor stub
	}
	
	public void start() {

		if (cutPoint == -1) {
			  throw new IllegalStateException("The cut point is not given!");
		  }
		  
		  kid1 = doCrossover(parent1, parent2);
		  kid2 = doCrossover(parent2, parent1);

}

}
