package genetic.mutation;

import genetic.Chromosome;
import util.SaveCopy;

public class Mutation {
	
	protected Chromosome mutant;
	protected int[] genes;
	protected int index1 = -1;
	protected int index2 = -1;
	
	protected final int arrLength;
	
	public Mutation(int[] genes, int index1, int index2) {
		arrLength = genes.length;
		//TODO: do it random-till the length of array
		this.index1 = index1;
		this.index2 = index2;
		SaveCopy.copy(this.genes, genes);
		
				
	}
	
	public void start() {

		if (index1 == -1 || index2 == -1) {
			throw new IllegalStateException("The index is not given!");
		}

		kid1 = doCrossover(parent1, parent2);
		kid2 = doCrossover(parent2, parent1);

	}

	
	
}
